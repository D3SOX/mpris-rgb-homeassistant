# Home Assistant webhook URL - REQUIRED
WEBHOOK_URL=http://your-home-assistant-instance:8123/api/webhook/your-webhook-id

# Path to your music directory for local files - REQUIRED
MUSIC_DIR=/home/yourusername/Music/

# Configuration settings (default values shown)
# Polling interval in seconds for checking media players
POLL_INTERVAL=2

# Default delay between color alternations in seconds
ALTERNATION_DELAY=0.35

# Temporary directory for storing artwork
TEMP_DIR=/tmp/mpris_covers

# Number of colors to extract. Set to -1 to disable color alternation
NUM_COLORS=3

# Threshold for color similarity detection (0-255)
COLOR_SIMILARITY_THRESHOLD=50

# Minimum delay between color alternations (250ms)
MIN_BPM_DELAY=0.25

# Maximum delay between color alternations (750ms)
MAX_BPM_DELAY=0.75

# Whether to use BPM for alternation timing (true/false)
USE_BPM=true

# Enable verbose logging for webhooks (true/false)
VERBOSE_LOGGING=false

# Minimum transition time for Yeelight W3 bulbs in seconds
MIN_YEELIGHT_TRANSITION=0.1

# BPM scaling range - minimum BPM (mapped to 0%)
BPM_SCALE_MIN=40

# BPM scaling range - maximum BPM (mapped to 100%)
BPM_SCALE_MAX=180 